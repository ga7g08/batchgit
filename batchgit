#git push
if [[ $gpush ]] || [[ $gpullpush ]]; then
        if [[ $gpullpush ]] && [[ -z $gpush ]]; then
                echo -e "\n${bold}GIT PULL & PUSH\n===============${normal}\n"
        elif [[ $gpush ]] && [[ -z $gpullpush ]]; then
                echo -e "\n${bold}GIT PUSH\n========${normal}\n"
        fi
        # if [[ $# -gt 1 ]]; then
