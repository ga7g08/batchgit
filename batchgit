                        touch ~/.batchgitrc
                        echo -e "making ~/.batchgitrc file \n"
                fi
                #think that is isnt actually necessary, anyways, adds current dir if ./ used
                if [[ $addDir == "./" ]]; then
                        echo $(pwd) >> ~/.batchgitrc
                        echo -e "adding $(pwd) to ~/.batchgitrc\n"
                elif [[ $addDir =~ "home" ]]; then
                        echo -e "adding $addDir to ~/.batchgitrc\n"
                        echo $addDir >> ~/.batchgitrc
                else
                        if [[ $addDir != "*/*" ]]; then
                                PWD=$(pwd)
                                #adds based on pwd plus arguement
                                pwdrepdir=$PWD"/"$addDir
                                echo -e "adding $pwdrepdir to ~/.batchgitrc\n"
                                echo $pwdrepdir >> ~/.batchgitrc
                        else
                                echo $addDir >> ~/.batchgitrc
                                echo -e "Added $addDir to the ~/.batchgitrc file"
                        fi
                fi
                #removes any duplicates
                sort -u -o ~/.batchgitrc ~/.batchgitrc
        else
                #error if dir not added
                echo "you need to add the directory after the flag!"
        fi
fi

if [[ $grm ]]; then
echo -e "\n${bold}REMOVE REPOS FROM BATCHGIT\n==========================${normal}\n"
        #add individual dir/repo mode
        if [[ ! -z $rmDir ]]; then 
                #checks rc exists, think this is / should be a function
                if [[ ! -f ~/.batchgitrc ]]; then
                        echo "~/.batchgitrc file does not exist \n"
                        findgitrepos
                fi
                if [[ $rmDir == "./" ]]; then
                        echo -e "removing $(pwd) from ~/.batchgitrc\n"
                        rmDir=$(pwd)
                        sed -i "s:$rmDir::g" ~/.batchgitrc 
                elif [[ $rmDir =~ "home" ]]; then
                        echo -e "removing $rmDir from ~/.batchgitrc\n"
                        sed -i "s:$rmDir::g" ~/.batchgitrc 
                else
                        if [[ $rmDir != "*/*" ]]; then
                                PWD=$(pwd)
                                #adds based on pwd plus arguement
                                pwdreprmdir=$PWD"/"$rmDir
                                echo -e "removing $pwdreprmdir from ~/.batchgitrc\n"
                                sed -i "s:$pwdreprmDir::g" ~/.batchgitrc 
                        else
                                echo -e "Removed $rmDir from the ~/.batchgitrc file"
                                sed -i "s:$pwdreprmDir::g" ~/.batchgitrc 
                        fi
                fi
                #removes any duplicates
                sort -u -o ~/.batchgitrc ~/.batchgitrc
        else
                #error if dir not added
                echo "you need to add the directory after the flag!"
        fi
fi

