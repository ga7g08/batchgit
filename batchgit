#deletes blank lines from the batchgitrc file
#could potentially be moved into the loop above
sed -e '/^$/d' -i ~/.batchgitrc 

#git status
if [[ $gstatus ]]; then
echo -e "\n${bold}GIT STATUS\n==========${normal}\n"
        # if [[ $# -gt 1 ]]; then
